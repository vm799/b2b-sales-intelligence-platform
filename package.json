{
  "name": "b2b-sales-intelligence-platform",
  "version": "1.0.0",
  "description": "AI-powered B2B sales intelligence platform with deterministic job analysis",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "setup": "chmod +x setup.sh && ./setup.sh",
    "docker:build": "docker build -t b2b-sales-intelligence .",
    "docker:run": "docker run -p 3000:3000 b2b-sales-intelligence",
    "docker:dev": "docker-compose up --build",
    "analyze:sample": "node test-functionality.js"
  },
  "keywords": [
    "b2b",
    "sales",
    "intelligence",
    "lead-scoring",
    "crm",
    "sales-automation",
    "job-analysis",
    "prospect-analysis"
  ],
  "author": "VM Dev <vm799@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vm799/b2b-sales-intelligence-platform.git"
  },
  "bugs": {
    "url": "https://github.com/vm799/b2b-sales-intelligence-platform/issues"
  },
  "homepage": "https://github.com/vm799/b2b-sales-intelligence-platform#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!public/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "semi": ["error", "always"]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}