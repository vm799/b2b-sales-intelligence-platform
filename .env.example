# B2B Sales Intelligence Platform - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration (if using external database)
# DATABASE_URL=mongodb://localhost:27017/b2b-sales-intelligence
# DATABASE_HOST=localhost
# DATABASE_PORT=27017
# DATABASE_NAME=b2b_sales_intelligence
# DATABASE_USER=
# DATABASE_PASSWORD=

# API Keys and External Services
# LINKEDIN_API_KEY=your_linkedin_api_key_here
# APOLLO_API_KEY=your_apollo_api_key_here
# CLEARBIT_API_KEY=your_clearbit_api_key_here
# HUNTER_API_KEY=your_hunter_api_key_here

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@domain.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@yourdomain.com

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration (Redis if using)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Analytics and Monitoring
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# SENTRY_DSN=https://your-sentry-dsn-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Lead Scoring Configuration
DEFAULT_SCORING_MODEL=deterministic
ENABLE_BATCH_PROCESSING=true
MAX_BATCH_SIZE=1000

# Company Data Sources
ENABLE_COMPANY_ENRICHMENT=false
COMPANY_API_TIMEOUT=5000

# Job Title Analysis
ENABLE_ADVANCED_JOB_ANALYSIS=true
JOB_TITLE_CONFIDENCE_THRESHOLD=0.7

# Webhook Configuration
# WEBHOOK_SECRET=your_webhook_secret_here
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Development and Testing
DEBUG=false
ENABLE_CORS=true
TRUST_PROXY=false

# Docker Configuration
DOCKER_ENV=false